<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainScreen">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/screentwo" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="473dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="206dp"
        android:backgroundTint="#53C1F3"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="169dp"
        android:layout_height="56dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="133dp"
        android:backgroundTint="#53C1F3"
        android:text="Clear"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDetailView"
        android:layout_width="171dp"
        android:layout_height="53dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="621dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="57dp"
        android:backgroundTint="#53C1F3"
        android:text="View Temperature"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/maxTemperatureTextView"
        android:layout_width="270dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="558dp"
        android:ems="10"
        android:fontFamily="@font/alike_angular"
        android:inputType="text"
        android:text="Maximum Temperature"
        android:textColor="#53C1F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minTemperatureTextView"
        android:layout_width="271dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="487dp"
        android:ems="10"
        android:fontFamily="@font/alike_angular"
        android:inputType="text"
        android:text="Minimum Temperature"
        android:textColor="#53C1F3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weatherConditionTextView"
        android:layout_width="271dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="422dp"
        android:ems="10"
        android:fontFamily="@font/alike_angular"
        android:inputType="text"
        android:text="Conditions"
        android:textColor="#53C1F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/averageTemperature"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="350dp"
        android:ems="10"
        android:fontFamily="@font/alike_angular"
        android:inputType="text"
        android:text="Average Temperature"
        android:textColor="#53C1F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>